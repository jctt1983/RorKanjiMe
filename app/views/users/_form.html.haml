= form_for @user, html: { class: "form-horizontal", role: "form" } do |f|
  %div.form-group
    = f.label :name, :class => "col-lg-2 control-label"
    %div.col-lg-8
      = f.text_field :name, :class => "form-control"
  %div.form-group
    = f.label :email, :class => "col-lg-2 control-label"
    %div.col-lg-8
      = f.text_field :email, :class => "form-control"
  %div.form-group
    = f.label :password, :class => "col-lg-2 control-label"
    %div.col-lg-8
      = f.password_field :password, :class => "form-control", "autocomplete" => "off"
  %div.form-group
    = f.label :password_confirmation, "Confirm Password", :class => "col-lg-2 control-label"
    %div.col-lg-8
      = f.password_field  :password_confirmation, :class => "form-control", "autocomplete" => "off"
  %div.form-group
    = f.label :password_confirmation, "Time Zone", :class => "col-lg-2 control-label"
    %div.col-lg-8
      %div.ui-select
        = time_zone_select :time_zone, :class => "user_time_zone"
  %div.actions
    = f.submit  class: "btn btn-large btn-success"
    %a{:href => users_path , :class => "btn btn-large btn-danger pull-left"} Back

- content_for :title do
  User List
- content_for(:custom_css) do
  / this page specific styles
  %link(rel="stylesheet" href="/assets/css/compiled/user-list.css")

%div{:id=>"pad-wrapper", :class=>"users-list"}
  %div{:class=>"row header"}
    %h3 Users
    %div{:class=>"col-md-10 col-sm-12 col-xs-12 pull-right"}
      %input{:type=>"text", :class=>"col-md-5 search", "placeholder"=>"Type a user's name..."}
      %a{:href=> new_user_path, :class=> "btn-flat success pull-right"}
        %span &#43;
        NEW USER
  %div.row
    %div.col-md-12
      %table.table.table-hover
        %thead
          %tr
            %th.col-md-4.sortable Name
            %th.col-md-3.sortable
              %span.line
              Created
            %th.col-md-3.sortable
              %span.line
              Updated
            %th.col-md-2.align-right
              %span.line
        %tbody
          - @users.each do |user|
            %tr
              %td
                = gravatar_for user
                = link_to user.name, user, :class=>"name"
                %span{:class=>"subtext"}= user.email
              %td= user.created_at
              %td= user.updated_at
              %td
                
                
                

                %a{:href=> edit_user_path(user), :class=> "btn btn-primary" }
                  %i.icon-edit
                %a{:href=> user_path(user), :class=> "btn btn-primary", "data-confirm"=>"Are you sure?", "data-method"=>"delete" }
                  %i.icon-trash
                = link_to 'Destroy', user, :method => :delete, :data => { :confirm => 'Are you sure?' }                      
